<!doctype html>
<html class="no-js">
    <head>
        {{! Document Settings }}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="handheldfriendly" content="true"/>
        {{! Page Meta }}
		{{#if post}}
        <title>{{meta_title}} - {{@blog.title}}</title>
	    {{else}}
	    <title>{{meta_title}} - 一个科学的博客</title>
	    {{/if}}
		{{#if post}}
		       <meta name="description" content="{{#post}}{{excerpt words="150"}}
		    {{/post}}" />
			   <meta name="keywords" content="{{meta_description}}"/>
		    {{else}}
		        <meta name="description" content="{{meta_description}}" />
				<meta name="keywords" content="{{meta_title}} - 一个科学的博客,railgun,Sven" />
		    {{/if}}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->
        <link rel="stylesheet" href="{{asset "css/styles.css"}}">
        {{ghost_head}}
    </head>
<body class="{{body_class}} nav-closed">
<div class="nav">
<h3 class="nav-title">Menu</h3>
<a href="#" class="nav-close">
<span class="hidden">Close</span>
</a>
